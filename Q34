// To write a code to check a number is prime or not 
#include <stdio.h>
int main() {
    int n, i, isprime=1 ;
    
    printf("Enter a Number: ");
    scanf("%d",&n);
    
    if(n<=1){
    isprime = 0;
    }
    
    for(i=2; i<=n/2; i++)
    {
        if(n%i==0)
        {
        isprime = 0;
        break;
        }
    }
    
    if(isprime==1){
        printf("%d is a Prime No ", n);
    }
    else {
        printf("%d is a not a Prime No ", n);
    }
}
