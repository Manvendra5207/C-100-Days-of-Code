#include <stdio.h>
int main()
{
    float r,circum,area;
    
    printf("Enter Radius of circle: ");
    scanf("%f",&r);
    
    area = 3.14159*(r*r);   // value of  pi = 3.14159
    printf("Area is: %f\n",area);
    
    circum = 2*3.14159*r;
    printf("Circumference of circle is: %f",circum );
    
    return 0;
}
