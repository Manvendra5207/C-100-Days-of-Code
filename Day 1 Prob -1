#include <stdio.h>

int main() {
    // asking the user to input two numbers 
        int a , b ,sum ;
    printf("Enter number 1 :");
    scanf("%d", &a);
    printf("Enter number 2 :" );
    scanf ("%d" , &b );
    
    //  now calculating their sum 
     sum= a+b;
     printf("Sum of a and b is : %d",sum );
     
     
    return 0;
}
